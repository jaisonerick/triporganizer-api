<%= simple_form_for([:admin, @company]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :company_type, collection: { 'Transporte Rodoviário' => :bus, 'Transporte Férreo' => :train, 'Transporte Fluvial' => :boat, 'Outros' => :other } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
