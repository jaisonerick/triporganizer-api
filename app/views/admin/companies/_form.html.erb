<%= simple_form_for([:admin, @company]) do |f| %>
  <%= f.error_notification %>

  <%= f.input :latitude, as: :hidden, input_html: { class: 'places-latitude' } %>
  <%= f.input :longitude, as: :hidden, input_html: { class: 'places-longitude' } %>

  <div class="form-inputs">
    <%= f.input :company_type, collection: {
      'Transporte Rodoviário' => :bus,
      'Transporte Férreo' => :train,
      'Transporte Fluvial' => :boat,
      'Transporte Aéreo' => :airline,
      'Hotel' => :hotel,
      'Local' => :place,
      'Outros' => :other
    }, input_html: { class: 'company-type-select' } %>

    <%= f.input :name, input_html: { class: 'places-name' } %>
    <%= f.input :description %>
    <%= f.input :phone, input_html: { class: 'places-phone' } %>

    <div class="company-location">
      <%= f.input :place, as: :place %>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :time_zone %>
          <%= f.input :address, input_html: { class: 'places-address' } %>
          <%= f.input :site, input_html: { class: 'places-site' } %>
        </div>
        <div class="col-md-6">
          <%= f.input :picture %>

          <%= image_tag(@company.picture_url.presence || 'no_image.png' , class: 'img-responsive') %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
