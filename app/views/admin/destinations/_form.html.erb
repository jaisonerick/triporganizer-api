<%= simple_form_for([:admin, @destination.trip, @destination]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :starts_at %>
    <%= f.input :ends_at %>
    <%= f.input :address %>
    <%= f.input :picture_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
