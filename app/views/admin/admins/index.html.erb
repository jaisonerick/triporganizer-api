<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <div class="btn-group pull-right">
        <%= link_to 'Novo Administrador', new_admin_admin_path, class: 'btn btn-primary' %>
      </div>

      <h1>Administradores</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th>Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.email %></td>
            <td><%= admin.name %></td>
            <td>
              <div class="btn-group pull-right">
                <%= link_to 'Editar', edit_admin_admin_path(admin), class: 'btn btn-default' %>
                <%= link_to 'Remover', [:admin, admin], method: :delete, data: { confirm: 'VocÃª tem certeza disso?' }, class: 'btn btn-default' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

