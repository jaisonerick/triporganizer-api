<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <div class="btn-group pull-right">
        <%= link_to 'Voltar', admin_trip_appointments_path(@trip), class: 'btn btn-default' %>
        <%= link_to 'Editar', edit_admin_trip_appointment_path(@trip, @appointment), class: 'btn btn-default' %>
      </div>

      <h1>Visualizando appointment</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Type:</dt>
      <dd><%= @appointment.type %></dd>

      <dt>Description:</dt>
      <dd><%= @appointment.description %></dd>

      <dt>When:</dt>
      <dd><%= @appointment.scheduled_at %></dd>
    </dl>
  </div>
</div>
