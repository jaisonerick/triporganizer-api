<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <div class="btn-group pull-right">
        <%= link_to 'Voltar', [:admin, @trip], class: 'btn btn-default' %>
      </div>
      <h1>Novo Evento</h1>
    </div>
  </div>
</div>

