<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <div class="btn-group pull-right">
        <%= link_to 'Novo Hotel', new_admin_hotel_path, class: 'btn btn-primary' %>
      </div>

      <h1>Hotéis</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Endereço</th>
          <th>Cidade</th>
          <th>País</th>
          <th>Telefone</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @hotels.each do |hotel| %>
          <tr>
            <td><%= hotel.name %></td>
            <td><%= hotel.address %></td>
            <td><%= hotel.city %></td>
            <td><%= hotel.country %></td>
            <td><%= hotel.phone %></td>
            <td><%= hotel.email %></td>
            <td>
              <div class="btn-group pull-right">
                <%= link_to 'Editar', edit_admin_hotel_path(hotel), class: 'btn btn-default' %>
                <%= link_to 'Remover', [:admin, hotel], method: :delete, data: { confirm: 'Você tem certeza disso?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
