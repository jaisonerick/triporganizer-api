<%= simple_form_for([:admin, @trip, @appointment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :company, collection: Company.train %>
    <%= f.input :scheduled_at %>
    <%= f.input :end_date %>
    <%= f.input :line %>
    <%= f.input :from %>
    <%= f.input :to %>
    <%= f.input :address %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
