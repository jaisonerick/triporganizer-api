<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <%= link_to 'Novo Voo', new_admin_trip_flight_path(@trip), class: 'btn btn-primary pull-right' %>

      <h1><%= @trip.name %> </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to 'Detalhes', [:admin, @trip] %>
      </li>
      <li role="presentation">
        <%= link_to 'Clientes', admin_trip_registrations_path(@trip) %>
      </li>
      <li role="presentation">
        <%= link_to 'Destinos', admin_trip_destinations_path(@trip) %>
      </li>
      <li role="presentation" class="active"><a href="#">Voos</a></li>
      <li role="presentation">
        <%= link_to 'Hotéis', admin_trip_trip_hotels_path(@trip) %>
      </li>
    </ul>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Voo</th>
          <th>Saída</th>
          <th>Chegada</th>
          <th>Origem</th>
          <th>Destino</th>
          <th>Portão de Embarque</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @flights.each do |flight| %>
          <tr>
            <td><%= flight.name %></td>
            <td><%= l flight.departure_at %></td>
            <td><%= l flight.arrives_at %></td>
            <td><%= flight.origin %></td>
            <td><%= flight.destination %></td>
            <td><%= flight.boarding_gate %></td>
            <td class="text-right">
              <div class="btn-group" role="group">
                <%= link_to 'Editar', edit_admin_trip_flight_path(flight.trip, flight), class: 'btn btn-default' %>
                <%= link_to 'Remover', [:admin, flight.trip, flight], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
