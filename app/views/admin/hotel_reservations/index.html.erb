<div class="row">
  <div class="col-md-12">
    <%= link_to 'Nova Reserva', new_admin_trip_registration_hotel_reservation_path(@trip, @registration), class: 'btn btn-primary pull-right' %>

    <div class="page-header">
      <h1><%= link_to @trip.name, admin_trip_registrations_path(@trip) %> &gt; <%= @registration.user.name %> </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to 'Detalhes', [:admin, @trip, @registration] %>
      </li>
      <li role="presentation">
        <%= link_to 'Passagens Aéreas', admin_trip_registration_boarding_tickets_path(@trip, @registration) %>
      </li>
      <li role="presentation" class="active">
        <a href="#">Hospedagem</a>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Hotel</th>
          <th>Entrada</th>
          <th>Saída</th>
          <th>Quarto</th>
          <th>Notas</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @hotel_reservations.each do |hotel_reservation| %>
          <tr>
            <td><%= hotel_reservation.destination.try(:name) %></td>
            <td><%= hotel_reservation.destination ? l(hotel_reservation.destination.starts_at) : nil %></td>
            <td><%= hotel_reservation.destination ? l(hotel_reservation.destination.ends_at) : nil %></td>
            <td><%= hotel_reservation.room %></td>
            <td><%= hotel_reservation.notes %></td>
            <td class="text-right">
              <div class="btn btn-group">
                <%= link_to 'Editar', edit_admin_trip_registration_hotel_reservation_path(@trip, @registration, hotel_reservation), class: 'btn btn-default' %>
                <%= link_to 'Remover', [:admin, @trip, @registration, hotel_reservation], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
