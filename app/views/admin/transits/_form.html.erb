<%= simple_form_for([:admin, @trip, @registration, @transit]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :transport, collection: @trip.transports %>
    <%= f.input :attachment_url %>
    <%= f.input :seat %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
