<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1><%= @trip.name %> </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to 'Detalhes', [:admin, @trip] %>
      </li>
      <li role="presentation" class="active">
        <a href="#">Clientes</a>
      </li>
      <li role="presentation">
        <%= link_to 'Destinos', admin_trip_destinations_path(@trip) %>
      </li>
      <li role="presentation">
        <%= link_to 'Transportes', admin_trip_transports_path(@trip) %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= simple_form_for([:admin, @trip, @registration], wrapper: :inline_form, html: { class: 'form-inline' }) do |f| %>
      <%= f.association :user, prompt: "Escolha um cliente" %>
      <%= f.submit 'Registrar', class: 'btn btn-primary' %>
    <% end %>

    <table class="table">
      <thead>
        <th>Nome</th>
        <th>&nbsp;</td>
      </thead>

      <tbody>
        <% @registrations.each do |registration| %>
          <tr>
            <td><%= registration.user.name %></td>
            <td class="text-right">
              <div class="btn-group">
                <%= link_to 'Acessar', admin_trip_registration_path(@trip, registration), class: 'btn btn-default' %>
                <%= link_to 'Remover', admin_trip_registration_path(@trip, registration), method: :delete, class: 'btn btn-default' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
