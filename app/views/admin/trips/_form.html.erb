<%= simple_form_for([:admin, @trip], html: { multipart: true }) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :place, as: :place %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :starts_at %>
        <%= f.input :ends_at %>
        <%= f.input :default_time_zone %>
      </div>
      <div class="col-md-6">
        <%= image_tag(@trip.image.presence || 'no_image.png' , class: 'img-responsive places-image-tag') %>
      </div>
    </div>
    <%= f.input :image, as: :hidden, input_html: { class: 'places-image-form' } %>

    <%= f.input :promo %>
    <%= f.hidden_field :promo_cache %>
    <% if f.object.promo? %>
      <strong>Promo Atual: <%= link_to(f.object.promo_url, target: '_blank') %></strong>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
