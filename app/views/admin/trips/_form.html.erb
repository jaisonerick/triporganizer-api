<%= simple_form_for([:admin, @trip]) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :place, as: :place %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :starts_at %>
        <%= f.input :ends_at %>
      </div>
      <div class="col-md-6">
        <%= image_tag(@trip.image.presence || 'no_image.png' , class: 'img-responsive places-image-tag') %>
      </div>
    </div>
    <%= f.input :image, as: :hidden, input_html: { class: 'places-image-form' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
