<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <div class="btn-group pull-right">
        <%= link_to 'Voltar', admin_trip_appointment_milestones_path(@trip, @appointment), class: 'btn btn-default' %>
        <%= link_to 'Editar', edit_admin_trip_appointment_milestone_path(@trip, @appointment, @milestone), class: 'btn btn-default' %>
      </div>

      <h1>Visualizando milestone</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Appointment:</dt>
      <dd><%= @milestone.appointment %></dd>

      <dt>Description:</dt>
      <dd><%= @milestone.description %></dd>

      <dt>Order:</dt>
      <dd><%= @milestone.order %></dd>

    </dl>
  </div>
</div>
