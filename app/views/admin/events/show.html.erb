<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <div class="btn-group pull-right">
        <%= link_to 'Voltar', admin_trip_destination_events_path(@trip, @destination), class: 'btn btn-default' %>
        <%= link_to 'Editar', edit_admin_trip_destination_event_path(@trip, @destination, @event), class: 'btn btn-default' %>
      </div>

      <h1>Visualizando Evento</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name:</dt>
      <dd><%= @event.name %></dd>

      <dt>Description:</dt>
      <dd><%= @event.description %></dd>

      <dt>Starts at:</dt>
      <dd><%= @event.starts_at %></dd>

      <dt>Ends at:</dt>
      <dd><%= @event.ends_at %></dd>

      <dt>Type:</dt>
      <dd><%= @event.event_type %></dd>

    </dl>
  </div>
</div>
