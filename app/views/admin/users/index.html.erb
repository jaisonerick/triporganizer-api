<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <%= link_to 'Novo Cliente', new_admin_user_path, class: 'btn btn-primary pull-right' %>

      <h1>Clientes</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th><%= User.human_attribute_name(:name) %></th>
          <th><%= User.human_attribute_name(:email) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @admin_users.each do |admin_user| %>
          <tr>
            <td><%= admin_user.name %></td>
            <td><%= admin_user.email %></td>
            <td class="text-right">
              <div class="btn-group" role="group">
                <%= link_to 'Editar', edit_admin_user_path(admin_user), class: 'btn btn-default' %>
                <%= link_to 'Remover', [:admin, admin_user], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
