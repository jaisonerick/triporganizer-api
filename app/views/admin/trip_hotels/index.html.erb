<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <%= link_to 'Nova Hospedagem', new_admin_trip_trip_hotel_path(@trip), class: 'btn btn-primary pull-right' %>

      <h1><%= @trip.name %> </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to 'Detalhes', [:admin, @trip] %>
      </li>
      <li role="presentation">
        <%= link_to 'Clientes', admin_trip_registrations_path(@trip) %>
      </li>
      <li role="presentation">
        <%= link_to 'Destinos', admin_trip_destinations_path(@trip) %>
      </li>
      <li role="presentation">
        <%= link_to 'Voos', admin_trip_flights_path(@trip) %>
      </li>
      <li role="presentation" class="active">
        <a href="#">Hoteis</a>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Hotel</th>
          <th>Notas</th>
          <th>Entrada</th>
          <th>Saída</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @trip_hotels.each do |trip_hotel| %>
          <tr>
            <td><%= trip_hotel.hotel.name %></td>
            <td><%= trip_hotel.notes %></td>
            <td><%= l trip_hotel.starts_at %></td>
            <td><%= l trip_hotel.ends_at %></td>
            <td class="text-right">
              <div class="btn-group">
                <%= link_to 'Editar', edit_admin_trip_trip_hotel_path(@trip, trip_hotel), class: 'btn btn-default' %>
                <%= link_to 'Remover', [:admin, @trip, trip_hotel], method: :delete, data: { confirm: 'Você tem certeza disso?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

