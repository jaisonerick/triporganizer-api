<% if flash.any? %>
  <div class="container">
    <div class="row">
      <% user_facing_flashes.each do |key, value| -%>
        <div class="col-md-12">
          <div class="alert alert-<%= flash_class(key) %>" role="alert"><span><%= value %></span></div>
        </div>
      <% end -%>
    </div>
  </div>
<% end %>
