<div class="login">
  <div class="login__logo">
    <%= image_tag 'logo.png' %>
  </div>

  <div class="devise-password-callout">
    Essa ser√° sua senha para entrar no <strong>TripOrganizer</strong>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'login-form' }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, label: false, required: true, autofocus: true, placeholder: 'Senha' %>
      <%= f.input :password_confirmation, label: false, required: true, placeholder: 'Confirme sua senha' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Alterar minha senha" %>
    </div>
  <% end %>

  <div class="download-callout">
    <div>
      <a href="https://play.google.com/store/apps/details?id=com.triporganizer">Baixar para Android</a>
      <a href="https://itunes.apple.com/us/app/trip-organizer/id1229475650?l=pt&ls=1&mt=8">Baixar para iOS</a>
    </div>
  </div>
</div>

