<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <div class="btn-group pull-right">
        <%%= link_to 'Voltar', admin_<%= index_helper %>_path, class: 'btn btn-default' %>
        <%%= link_to 'Editar', edit_admin_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-default' %>
      </div>

      <h1>Visualizando <%= singular_table_name %></h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <%- attributes.each do |attribute| -%>
      <dt><%= attribute.human_name %>:</dt>
      <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>

      <%- end -%>
    </dl>
  </div>
</div>
